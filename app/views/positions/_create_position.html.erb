<div class="modal fade" id="positionModal" tabindex="-1" role="dialog" aria-labelledby="positionModalLabel" aria-hidden="true">

  <div class="modal-dialog" role="document" >
    <div class="modal-table modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="positionModalLabel">Add New Position</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">x</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @position do |f| %>
          <%= f.input :title,label: "Job Title:" %>
          <div class="row">
          <div class="col">
          <div class="mb-2" >Due Date:</div>
          <%= f.text_field :due_date, id: "datetimepicker", :input_html => {:style=> 'width: 100px'} %>
          </div>
          <div class="col">
          <%= f.input :target_hire_number,:input_html => {:style=> 'width: 100px'},label: "Target Number of Hire:" %>
          </div>
          </div>
            <%= f.submit "Set Score Now", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
