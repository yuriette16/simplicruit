
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <% @positions.each do |position| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> <%= position.title %> </h5>&emsp;<span> <%= position.job_applications.count %><i class="fas fa-user"></i></span>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table>
        <tr>
          <th>Name</th>
          <th>Video Score</th>
          <th>Status</th>
          <th>Interview Date</th>
        </tr>
    <tr>
       <% position.job_applications.order('video_score DESC').each do |job_application| %>

       <td class="name">
      <a href=""><%= job_application.candidate_name %></a>
       </td>
       <td ><%= job_application.video_score %></td>
      <td class="status"><%=job_application.status%></td>
      <td class="date-interview">2020-08-22</td>
    </tr>
    <% end %>
     </table>
      </div>
       </div>
        </div>
        <% end %>
         </div>

