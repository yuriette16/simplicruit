<div class="evaluation-form-overall">
  <div class="question-form">
    <% @auto_questionnaires.each do |auto_questionnaire|  %>
      <div class="questionnaire-form">
        <div class="category-name"><b><%= auto_questionnaire.question.category %></b></div>
        <div class="question-name"><%= auto_questionnaire.question.question %>&thinsp;
          <%= link_to destroy_user_session_path, :method => :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        <textarea class="answer-field" data-questionnaire="<%= auto_questionnaire.id %>" data-question="<%= auto_questionnaire.question_id %>" data-job_application="<%= job_application.id %>"><%= auto_questionnaire.answer %></textarea>
        <br>
      </div>
    <% end %>
    <div class="modal-add-category"><i class="fas fa-plus-circle"></i>&thinsp;Add category</div>
    <div class="modal-add-question"><i class="fas fa-plus-circle"></i>&thinsp;Add question</div>
  </div>
  <button class="btn-save-evaluation">Save</button>
</div>
