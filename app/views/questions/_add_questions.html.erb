<div class="modal fade" id="addQuestions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add question to this category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@category, @question] do |q| %>
          <%= q.input :question %>
          <%= q.association :category, as: :select, selected: "#{@category.name}", disabled: true %>
          <%= q.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
